public static boolean isPowerofTwo(int n) {
        int temp;
        if (n == 0)
            return false;
        if (n == 1 || n == 2)
            return true;
        while (n >= 2){
            temp = n % 2;
            if (temp != 0)
                return false;
            else {
                n /= 2;
            }
        }
        return n == 1;
    }
